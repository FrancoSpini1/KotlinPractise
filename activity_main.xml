<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="LabelFor">

    <View
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:id="@+id/colorLoginLogo"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#ED5964"
        ></View>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textSize="60dp"
        android:textStyle="bold"
        android:fontFamily="casual"
        app:layout_constraintTop_toTopOf="@+id/colorLoginLogo"
        app:layout_constraintBottom_toBottomOf="@id/colorLoginLogo"
        app:layout_constraintStart_toStartOf="@id/colorLoginLogo"
        app:layout_constraintEnd_toEndOf="@id/colorLoginLogo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textSize="60dp"
        android:textStyle="bold"
        android:fontFamily="casual"
        app:layout_constraintTop_toTopOf="@+id/colorLoginLogo"
        app:layout_constraintBottom_toBottomOf="@id/colorLoginLogo"
        app:layout_constraintStart_toStartOf="@id/colorLoginLogo"
        app:layout_constraintEnd_toEndOf="@id/colorLoginLogo"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/colorLoginLogo"
        android:background="#B9DD55"
        android:id="@+id/viewDeCampos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.3" > </View>

    <EditText
        android:layout_height="40dp"
        android:layout_width="0dp"
        android:id="@+id/campoUsuario"
        android:hint="escribe tu usuario:"
        app:layout_constraintTop_toTopOf="@+id/viewDeCampos"
        app:layout_constraintBottom_toBottomOf="@+id/viewDeCampos"
        app:layout_constraintStart_toStartOf="@+id/viewDeCampos"
        app:layout_constraintEnd_toEndOf="@+id/viewDeCampos"
        app:layout_constraintVertical_bias="0.25"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="@color/white"></EditText>

    <EditText
        android:layout_height="40dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@+id/viewDeCampos"
        android:hint="escribe tu contrasenia:"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/viewDeCampos"
        app:layout_constraintStart_toStartOf="@+id/viewDeCampos"
        app:layout_constraintEnd_toEndOf="@+id/viewDeCampos"
        app:layout_constraintVertical_bias="0.6"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="@color/white"
        android:id="@+id/campoContrasenia"

        ></EditText>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sign-in"
            app:layout_constraintTop_toBottomOf="@+id/campoContrasenia"
            android:id="@+id/botonInicioSesion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/viewDeCampos"
            app:layout_constraintVertical_bias="0.5"
            android:textColor="@color/material_dynamic_primary70"
            ></Button>


</androidx.constraintlayout.widget.ConstraintLayout>